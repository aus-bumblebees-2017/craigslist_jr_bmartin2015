<h1>Register</h1>

<%= form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation" class="text-danger">
      <p>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this article from being saved:
      </p>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label       :email %>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label          :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
