<!DOCTYPE html>
<html>
  <head>
    <title>CraigslistJr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav class="nav has-shadow">
  <div class="nav-left">
    <%= link_to 'craigslist jr', root_path, class: 'nav-item' %>
  </div>
  <div class="nav-right">
  <% if current_user %>
  <%= link_to 'profile', @user, class: 'nav-item' %>
  <%= link_to 'logout', logout_path, method: :delete, class: 'nav-item' %>
<% else %>
  <%= link_to 'register', new_user_path, class: 'nav-item' %>
  <%= link_to 'login', login_path, class: 'nav-item' %>
<% end %>
</nav>
  <br>
  <%= yield %>
</div>
</body>
</html>
