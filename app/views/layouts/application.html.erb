<!DOCTYPE html>
<html>
  <head>
    <title>CraigslistJr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div class="container">
  <h1>Craigslist Jr.</h1>
<% if current_user %>
  <p><%= link_to 'profile', @user %> | <%= link_to 'logout', logout_path %></p>
<% else %>
  <p><%= link_to 'register', new_user_path %> | <%= link_to 'login', login_path %></p>
<% end %>
  <nav> <a href="/">Home</a> > <a href="/categories/<%= @category.id %>/articles"><%= @category.name %></a></nav>
  <br>
  <%= yield %>
</div>
</body>
</html>
